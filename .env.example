# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Google Gemini API
GOOGLE_API_KEY=your_google_gemini_api_key

# Application Settings
POSTING_SCHEDULE=09:00,12:00,15:00  # Times to post content (comma-separated)
DAILY_CONNECTION_LIMIT=20  # Maximum connection requests per day
ENGAGEMENT_INTERVAL=180  # Seconds between engagement actions

# Voice Control Settings
VOICE_CONTROL_ENABLED=true
VOICE_CONTROL_LANGUAGE=en-US

# Analytics Settings
ANALYTICS_ENABLED=true
ANALYTICS_REPORT_FREQUENCY=daily  # daily, weekly, or monthly

# Content Generation Settings
CONTENT_TONE=professional  # professional, casual, or technical
CONTENT_LENGTH=medium  # short, medium, or long
CONTENT_TOPICS=AI,Technology,Business  # Comma-separated list of topics

# Rate Limiting
MIN_DELAY_BETWEEN_ACTIONS=60  # Minimum seconds between actions
MAX_DELAY_BETWEEN_ACTIONS=180  # Maximum seconds between actions

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=linkedin_automation.log 